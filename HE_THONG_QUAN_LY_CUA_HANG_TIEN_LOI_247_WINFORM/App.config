<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  <entityFramework>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
  <connectionStrings>
    <!-- 
    =====================================================
    CẤU HÌNH KẾT NỐI SQL SERVER
    =====================================================
    Thay đổi thông tin sau cho phù hợp với SQL Server của bạn:
    
    1. data source: Tên server SQL của bạn
       - localhost hoặc . (server local)
       - localhost\SQLEXPRESS (SQL Express)
       - Tên máy tính\Tên instance
       
    2. initial catalog: Tên database của bạn
    
    3. Integrated Security (Windows Authentication):
       connectionString="data source=localhost;initial catalog=QuanLyCuaHangTienLoi;integrated security=True;trustservercertificate=True;MultipleActiveResultSets=True"
       
    4. SQL Server Authentication:
       connectionString="data source=localhost;initial catalog=QuanLyCuaHangTienLoi;user id=sa;password=YourPassword;trustservercertificate=True;MultipleActiveResultSets=True"
    =====================================================
    -->
    <!-- Kết nối backup - Sử dụng SQL Authentication -->
    <add name="AppDbContext" connectionString="data source=localhost,1434;initial catalog=QuanLyCuaHangTienLoi;user id=sa;password=Password123!;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
    <add name="AppDbContext1" connectionString="data source=localhost,1434;initial catalog=QuanLyCuaHangTienLoi;user id=sa;password=Password123!;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>